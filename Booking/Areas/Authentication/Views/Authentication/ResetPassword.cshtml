@model ResetPassword
@{
    ViewData["Title"] = "Lấy lại mật khẩu";
    string email = ViewBag.email;
    string token = ViewBag.token;
}


<link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />

<div class="">
    <form  asp-area="Authentication" asp-controller="Authentication" asp-action="ResetPassword" class="login mx-auto">

        <div class="text-center intro">
            <img src="https://i.imgur.com/uNiv4bD.png" width="160">
            <span class="d-block account">Tạo mật khẩu mới của bạn</span>
        </div>

        <div class="mt-4">
            <div class="mt-3 inputbox">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới">
                <i class="fa fa-user"></i>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mt-3 inputbox">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                <i class="fa fa-user"></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mt-3 inputbox">
                <input asp-for="Token" value="@token" type="hidden" class="form-control" placeholder="Nhập lại mật khẩu">
            </div>

            <div class="mt-3 inputbox">
                <input asp-for="Email" value="@email" type="hidden" class="form-control" placeholder="Nhập lại mật khẩu">
            </div>
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-primary w-100">Gửi</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}