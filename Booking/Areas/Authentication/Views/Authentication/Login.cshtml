@model SignInModel
@{
    ViewData["Title"] = "Đăng nhập";
}


<form asp-area="Authentication" asp-controller="Authentication" asp-action="Login">
	<div class="login-box">
		<div class="login-form">
			<a href="index.html" class="login-logo mx-auto">
				<img src="~/assets/admin-layout/images/logo.svg" alt="Vico Admin" />
			</a>
			<div class="login-welcome text-center">
				Chào mừng quay trở lại <br />Xin cảm ơn đã sử dụng dịch vụ của chúng tôi.
			</div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-start text-danger"></span>
			</div>

			<div class="mb-3">
				<div class="d-flex justify-content-between">
					<label asp-for="Password" class="form-label"></label>
					<a asp-area="Authentication" asp-controller="Authentication" asp-action="ForgotPassword" class="btn-link ml-auto">Quên mật khẩu</a>
				</div>
				<input asp-for="Password" type="password" class="form-control">
			</div>

            <div class="mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-label" for="flexCheckDefault">
                    Nhớ mật khẩu
                </label>
            </div>

			<div class="login-form-actions">
				<button type="submit" class="btn">
					<span class="icon"> <i class="bi bi-arrow-right-circle"></i> </span>
					Đăng nhập
				</button>
			</div>
			
			<div class="login-form-footer">
				<div class="additional-link">
                    Chưa có tài khoản? <a asp-area="Authentication" asp-controller="Authentication" asp-action="SignUp"> Đăng ký</a>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
