@model ConfirmEmailModel
@{
    ViewData["Title"] = "Gửi lại em xác thực";
}



<link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />

<div class="">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-area="Authentication" asp-controller="Authentication" asp-action="ResendConfirmationEmail" class="login mx-auto">

        <div class="text-center intro">
            <img src="https://i.imgur.com/uNiv4bD.png" width="160">
            <span class="d-block account">Tài khoản chưa xác thực</span>
            <span class="contact">Xin vui lòng nhập email để xác thực</span> 
        </div>

        <div class="mt-4 text-center">

            <div class="mt-3 inputbox">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <i class="fa fa-user"></i>
            </div>
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}