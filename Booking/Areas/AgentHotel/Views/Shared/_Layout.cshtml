<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/admin-layout/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Booking.styles.css" asp-append-version="true" />



    <!-- font awae soem -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- Animated css -->
    <link rel="stylesheet" href="~/assets/admin-layout/css/animate.css">

    <!-- Bootstrap font icons css -->
    <link rel="stylesheet" href="~/assets/admin-layout/fonts/bootstrap/bootstrap-icons.css">



    <!-- Main css -->
    <link rel="stylesheet" href="~/assets/admin-layout/css/main.min.css">


    <!-- *************
        ************ Vendor Css Files *************
    ************ -->
    <!-- Scrollbar CSS -->
    <link rel="stylesheet" href="~/assets/admin-layout/vendor/overlay-scroll/OverlayScrollbars.min.css">

    <!-- Uploader CSS -->
    <link rel="stylesheet" href="~/assets/admin-layout/vendor/dropzone/dropzone.min.css" />

</head>
<body class="g-sidenav-show  bg-gray-200">

    <!-- Loading wrapper start -->
    <div id="loading-wrapper">
        <div class="spinner">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
            <div class="line4"></div>
            <div class="line5"></div>
            <div class="line6"></div>
        </div>
    </div>

    <!-- Loading wrapper end -->
    <!-- Page wrapper start -->
    <div class="page-wrapper">

        <!-- Sidebar wrapper start -->
        <nav class="sidebar-wrapper">

            <!-- Sidebar brand starts -->
            <div class="sidebar-brand">
                <a href="index.html" class="logo">
                    <img src="~/assets/admin-layout/images/logo.svg" alt="Admin Dashboards" />
                </a>
            </div>

            <!-- Sidebar brand starts -->
            <!-- Sidebar menu starts -->
            <div class="sidebar-menu">
                <div class="sidebarMenuScroll">
                    <ul>

                        @* thông tin partner *@
                        <li class="">
                            <a id="business-infor" class="nav-link" asp-area="AgentHotel" asp-controller="BusinessInfo" asp-action="Index">
                                <i class="bi bi-people-fill"></i>
                                <span class="menu-text">Thông tin đối tác</span>
                            </a>
                        </li>

                        @* quản lý hotel *@
                        <li class="">
                            <a id="hotel" class="nav-link" asp-area="AgentHotel" asp-controller="Hotel" asp-action="Index">
                                <i class="bi bi-building"></i>
                                <span class="menu-text">Quản lý khách sạn</span>
                            </a>
                        </li>

                        @* quản lý loại phòng*@
                        <li>
                            <a id="room-type" class="nav-link" asp-area="AgentHotel" asp-controller="RoomType" asp-action="Index">
                                <i class="bi bi-journals"></i>
                                <span class="menu-text">Loại phòng</span>
                            </a>
                        </li>


                    </ul>
                </div>
            </div>
            <!-- Sidebar menu ends -->

        </nav>
        <!-- Sidebar wrapper end -->
        <!-- *************
            ************ Main container start *************
        ************* -->

        <div class="main-container">

            <!-- Page header starts -->
            <div class="page-header">

                <div class="toggle-sidebar" id="toggle-sidebar"><i class="bi bi-list"></i></div>

                <!-- Breadcrumb start -->
                <ol class="breadcrumb d-md-flex d-none">
                    <li class="breadcrumb-item">
                        <i class="bi bi-house"></i>
                        <a href="index.html">Home</a>
                    </li>
                    <li class="breadcrumb-item breadcrumb-active" aria-current="page">Sales</li>
                </ol>

                <!-- Breadcrumb end -->
                <!-- Header actions ccontainer start -->
                <div class="header-actions-container">

                    <!-- Search container start -->
                    <div class="search-container">

                        <!-- Search input group start -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search anything">
                            <button class="btn" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                        <!-- Search input group end -->

                    </div>

                    <!-- Search container end -->
                    <!-- Leads start -->
                    <a href="orders.html" class="leads d-none d-xl-flex">
                        <div class="lead-details">You have <span class="count"> 21 </span> new leads </div>
                        <span class="lead-icon">
                            <i class="bi bi-bell-fill animate__animated animate__swing animate__infinite infinite"></i><b class="dot animate__animated animate__heartBeat animate__infinite"></b>
                        </span>
                    </a>
                    <!-- Leads end -->
                    <!-- Header actions start -->
                    <ul class="header-actions">
                        <li class="dropdown d-none d-md-block">
                            <a href="#" id="countries" data-toggle="dropdown" aria-haspopup="true">
                                <img src="~/assets/admin-layout/images/flags/1x1/br.svg" class="flag-img" alt="Admin Panels" />
                            </a>
                            <div class="dropdown-menu dropdown-menu-end mini" aria-labelledby="countries">
                                <div class="country-container">
                                    <a href="index.html">
                                        <img src="~/assets/admin-layout/images/flags/1x1/us.svg" alt="Clean Admin Dashboards" />
                                    </a>
                                    <a href="index.html">
                                        <img src="~/assets/admin-layout/images/flags/1x1/in.svg" alt="Google Dashboards" />
                                    </a>
                                    <a href="index.html">
                                        <img src="~/assets/admin-layout/images/flags/1x1/gb.svg" alt="AI Admin Dashboards" />
                                    </a>
                                    <a href="index.html">
                                        <img src="~/assets/admin-layout/images/flags/1x1/tr.svg" alt="Modern Dashboards" />
                                    </a>
                                    <a href="index.html">
                                        <img src="~/assets/admin-layout/images/flags/1x1/ca.svg" alt="Best Admin Dashboards" />
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li class="dropdown">
                            @await Html.PartialAsync("partials/_LoginPartial")
                        </li>
                    </ul>
                    <!-- Header actions end -->

                </div>
                <!-- Header actions ccontainer end -->

            </div>
            <!-- Page header ends -->
            <!-- Content wrapper scroll start -->
            <div class="content-wrapper-scroll">

                <!-- Content wrapper start -->
                <div class="content-wrapper">

                    <!-- Row start -->
                    <div class="row">
                        <div class="col-xxl-12 col-sm-12 col-12">
                            @RenderBody()
                        </div>
                    </div>

                    <!-- Row end -->

                </div>
                <!-- Content wrapper end -->
                <!-- App Footer start -->
                <div class="app-footer">
                    <span>© Arise admin 2023</span>
                </div>
                <!-- App footer end -->

            </div>
            <!-- Content wrapper scroll end -->

        </div>
        <!-- *************
            ************ Main container end *************
        ************* -->

    </div>
    <!-- Page wrapper end -->
    <!-- font awaesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" integrity="sha512-uKQ39gEGiyUJl4AI6L+ekBdGKpGw4xJ55+xyJG7YFlJokPNYegn9KwQ3P8A7aFQAUtUsAQHep+d/lrGqrbPIDQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Required jQuery first, then Bootstrap Bundle JS -->
    <script src="~/assets/admin-layout/js/jquery.min.js"></script>
    <script src="~/assets/admin-layout/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/admin-layout/js/modernizr.js"></script>
    <script src="~/assets/admin-layout/js/moment.js"></script>

    <!-- *************
        ************ Vendor Js Files *************
    ************* -->
    <!-- Overlay Scroll JS -->
    <script src="~/assets/admin-layout/vendor/overlay-scroll/jquery.overlayScrollbars.min.js"></script>
    <script src="~/assets/admin-layout/vendor/overlay-scroll/custom-scrollbar.js"></script>

    <!-- Apex Charts -->
    @* <script src="~/assets/admin-layout/vendor/apex/apexcharts.min.js"></script>
    <script src="~/assets/admin-layout/vendor/apex/custom/sales/salesGraph.js"></script>
    <script src="~/assets/admin-layout/vendor/apex/custom/sales/revenueGraph.js"></script>
    <script src="~/assets/admin-layout/vendor/apex/custom/sales/taskGraph.js"></script> *@

    <!-- Dropzone JS -->
    @* <script src="~/assets/admin-layout/vendor/dropzone/dropzone.min.js"></script> *@

    <!-- Main Js Required -->
    <script src="~/assets/admin-layout/js/main.js"></script>



    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            // Lấy đường dẫn hiện tại
            var currentPath = window.location.pathname;

            console.log(currentPath)

            // Loại bỏ tất cả các lớp "active" từ thanh sidebar
            $('.nav-link').removeClass('sidebar-menu-active');
            $('.nav-link').removeClass('active');


            // Thêm lớp "active" cho li có ID tương ứng với đường dẫn hiện tại
            if (currentPath.startsWith('/business-infor')) {
                $('#business-infor').addClass('sidebar-menu-active');
            } else if (currentPath.startsWith('/hotel-manager')) {
                $('#hotel').addClass('sidebar-menu-active');
            } else if (currentPath.startsWith('/room-type')) {
                $('#room-type').addClass('sidebar-menu-active');
            }
        });
    </script>
</body>
</html>

