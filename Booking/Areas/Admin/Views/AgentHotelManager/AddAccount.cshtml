@model AddAgent
@{
    ViewData["Title"] = "Cấp tài khoản cho đối tác";
    int partnerId = ViewBag.PartnerId;
}

<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="container rounded bg-white mb-5">
    <div class="row">

        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">Edogaru</span><span class="text-black-50">edogaru@mail.com.my</span><span> </span></div>
        </div>

        <div class="col-md-5 border-right">

            <div class="text-danger">
                <span>@(string.IsNullOrEmpty(TempData["err"] as string) == true ? TempData["err"] as string : "")</span>
            </div>

            <form asp-action="AddAccount" asp-route-partnerId="@partnerId" class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Thông tin tài khoản</h4>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="labels"></label>
                        <input asp-for ="FirstName" type="text" class="form-control p-1">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="labels"></label>
                        <input asp-for="LastName" type="text" class="form-control p-1">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels" asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" type="text" class="form-control p-1">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="labels"></label>
                        <input asp-for="Address" type="text" class="form-control p-1">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Email" class="labels"></label>
                        <input asp-for="Email" type="email" class="form-control p-1">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Password" class="labels"></label>
                        <input asp-for ="Password" type="text" class="form-control p-1" readonly>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-4 text-center">
                        <button class="btn btn-primary w-auto bg-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">Tạo tài khoản</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
