@model AddBusiness
@{
    ViewData["Title"] = "Thêm đối tác";
}


<div class="card">
	<div class="card-body">

		<form class="row" asp-action="AddBusiness">

			<div class="mx-auto col-sm-6 col-12">
				<div class="card-border">
					<div class="card-border-title">Thêm thông tin đối tác</div>
					<div class="card-border-body">

						<div class="row">

							<div class="col-sm-6 col-12">
								<div class="mb-3">
									<label asp-for="PartnerName" class="form-label"></label>
									<input asp-for="PartnerName" type="text" class="form-control" placeholder="Tên đối tác">
									<span asp-validation-for="PartnerName" class="text-danger"></span>
								</div>
							</div>

							<div class="col-sm-6 col-12">
								<div class="mb-3">
									<label asp-for="PhoneNumber" class="form-label"></label>
									<input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Số điện thoại">
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="col-sm-12 col-12">
								<div class="mb-3">
									<label asp-for="Email" class="form-label"></label>
									<input asp-for="Email" type="email" class="form-control" placeholder="Địa chỉ Email">
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
							</div>
							<div class="col-sm-12 col-12">
								<div class="mb-0">
									<label asp-for="Address" class="form-label"></label>
									<textarea asp-for="Address" rows="4" class="form-control"
											  placeholder="Địa chỉ đối tác"></textarea>
									<span asp-validation-for="Address" class="text-danger"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="col-sm-12 col-12">
				<div class="custom-btn-group flex-end">
					<button type="submit" class="btn btn-success">Thêm đối tác</button>
					<button type="reset" class="btn btn-light">Reset</button>
				</div>
			</div>
		</form>

	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

