    <script>
        $(document).ready(function () {
            // Lấy đường dẫn hiện tại
            var currentPath = window.location.pathname;

            console.log(currentPath)

            // Loại bỏ tất cả các lớp "active" từ thanh sidebar
			$('.nav-link').removeClass('sidebar-menu-active');
            $('.nav-link').removeClass('active');
			

            // Thêm lớp "active" cho li có ID tương ứng với đường dẫn hiện tại
            if (currentPath.startsWith('/user-management')) {
                $('#admin').addClass('sidebar-menu-active');
            } else if (currentPath.startsWith('/city-manager')) {
                $('#city').addClass('sidebar-menu-active');
            } else if (currentPath.startsWith('/agent-hotel-manager')) {
                $('#agent-hotel').addClass('sidebar-menu-active');
			} else if (currentPath.startsWith('/agent-tour')) {
				$('#agent-tour').addClass('sidebar-menu-active');
			}
        });
