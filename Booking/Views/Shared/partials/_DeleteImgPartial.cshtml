@model string;

@{
    /*
     * obj[0]: title
     * obj[1]: name1
     * obj[2]: name2
     * obj[3]: identity (email, id,...)
     * obj[4]: type (user, city, agent,..)
     */
    string[] obj = Model.Split(',');
}

<div class="modal fade" id="deleteImgModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <!-- title -->
                <h5 class="modal-title" id="exampleModalLabel">@obj[0]</h5>
                <button type="button" class="btn-danger rounded-full" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-x"></i>
                </button>
            </div>

            <!-- question -->
            <div class="modal-body">
                Bạn có muốn xóa: @obj[1] @obj[2]
            </div>

            <div class="modal-footer">

                <a type="button" class="btn btn-danger" asp-area="AgentHotel" asp-controller="Hotel" asp-action="DeleteAllImageHotel" asp-route-hotelId="@obj[3]">Xóa</a>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Trở lại</button>
            </div>
        </div>
    </div>
</div>