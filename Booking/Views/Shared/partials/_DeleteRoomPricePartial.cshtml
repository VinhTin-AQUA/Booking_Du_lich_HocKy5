@model string;

@{
    /*
     * obj[0]: RoomId
     * obj[1]: ValidFrom
     */
    string[] obj = Model.Split(',');
}

<div class="modal fade" id="deleteRoomPrice" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <!-- title -->
                <h5 class="modal-title" id="exampleModalLabel">Xóa giá phòng</h5>
                <button type="button" class="btn-danger rounded-full" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-x"></i>
                </button>
            </div>

            <!-- question -->
            <div class="modal-body">
                Bạn có muốn xóa giá phòng này?
            </div>

            <div class="modal-footer">

                <a type="button" class="btn btn-danger" asp-area="AgentHotel" asp-controller="RoomPrice" asp-action="DeleteRoomPrice" asp-route-roomId="@obj[0]" asp-route-validFrom="@obj[1]">Xóa</a>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Trở lại</button>
            </div>
        </div>
    </div>
</div>